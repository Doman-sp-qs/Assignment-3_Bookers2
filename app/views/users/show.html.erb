<!--ユーザー情報-->
<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<%= link_to "Edit Profile", edit_user_path(@user.id) %>

<!--新規投稿フォーム-->
<h1>New book</h1>
<%= form_with model: @post_book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <h4>Title名</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<!--特定ユーザーの投稿一覧-->
<h1>Books</h1>
<table>
  <tr>
    <th>user image</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>image</td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>