<!--ユーザー情報-->
<%= render 'users/info', user:@user %>

<!--新規投稿フォーム-->
<%= render 'books/new', post_book:@post_book %>

<!--特定ユーザーの投稿一覧-->
<h1>Books</h1>
<table>
  <tr>
    <th>user image</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>image</td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>