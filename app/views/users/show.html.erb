<!--サイドバー左-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報-->
      <%= render 'users/info', user:@user %>
      
      <!--新規投稿フォーム-->
      <%= render 'books/new', post_book:@post_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--特定ユーザーの投稿一覧-->
      <h1>Books</h1>
      <table>
        <tr>
          <th>user image</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>image</td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

