<!--プロフィール編集フォーム-->
<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div class="form-group">
    <h4>Name</h4>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <h4>Image</h4>
    <%= f.text_area :profile_image %>
  </div>
  <div class="form-group">
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.submit 'Update User' %>
  </div>
<% end %>