<!--新規投稿フォーム-->
<h2>New book</h2>
<%= form_with model: post_book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %><br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>