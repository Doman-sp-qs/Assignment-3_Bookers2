<!--サイドバー左-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報-->
      <%= render 'users/info', user:@user %>
      
      <!--新規投稿フォーム-->
      <%= render 'books/new', post_book:@post_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--投稿詳細-->
      <h2>Book detail</h2>
      <table>
        <tr>
          <td>
            <%= link_to image_tag(@book.user.get_profile_image(100, 100)), user_path(@book.user_id) %><br>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          <% end %>
          
        </tr>
      </table>
    </div>
  </div>
</div>

