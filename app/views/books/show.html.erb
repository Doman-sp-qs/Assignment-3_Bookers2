<!--ユーザー情報-->
<%= render 'users/info', user:@user %>

<!--新規投稿フォーム-->
<h2>New book</h2>
<%= form_with model: @post_book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <h4>Title名</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<!--投稿詳細-->
<h2>Book detail</h2>
<table>
  <tr>
    <td>
      <%= link_to image_tag(@book.user.get_profile_image(100, 100)), user_path(@book.user_id) %><br>
      <%= link_to @book.user.name, user_path(@book.user_id) %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    
    <% if @book.user_id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
    
  </tr>
</table>