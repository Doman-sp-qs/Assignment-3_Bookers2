<!--ユーザー情報-->
<%= render 'users/info', user:@user %>

<!--新規投稿フォーム-->
<h2>New book</h2>
<%= form_with model: @post_book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <h4>Title名</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<!--全ユーザーの投稿一覧-->
<h2>Books</h2>
<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user_id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  
</table>