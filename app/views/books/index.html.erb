<!--サイドバー左-->
<div class="container px-5 px-sm-0">
  <div class="errors-box">
    <% if @post_book.errors.any? %>
      <h3><%= @post_book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @post_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー情報-->
      <%= render 'users/info', user:@user %>
      
      <!--新規投稿フォーム-->
      <%= render 'books/new', post_book:@post_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--全ユーザーの投稿一覧-->
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to image_tag(book.user.get_profile_image(80, 80)), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        
      </table>
    </div>
  </div>
</div>

